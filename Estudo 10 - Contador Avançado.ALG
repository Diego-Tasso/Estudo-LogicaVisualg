Algoritmo "Estruturas de Repetição - Infinito"

Var
   n, x, salto: Inteiro


Inicio
   n <- 0
   Escreva ("Escolha até que numero quer contar: ")
   Leia (x)
   Escreva ("Escolha o valor do salto: ")
   Leia (salto)

   Enquanto (n <= x) faca
      Escreval (" - " , n)
      n <- n + salto
   Fimenquanto




Fimalgoritmo